<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".PaymentActivity">

    <TextView
        android:id="@+id/tvAmountInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/payment_title"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvCurrentYappyUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario Yappy: No configurado"
        android:textSize="14sp"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnAcceptPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/accept_payment"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnYappyPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/yappy_payment"
        android:backgroundTint="#3F51B5"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnCancelPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cancel_payment"
        android:backgroundTint="#FF5252"/>

</LinearLayout>